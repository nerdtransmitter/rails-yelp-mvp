<div class="container">
  <h1><%= @restaurant.name %></h1>
  <p><strong>Address: </strong><%= @restaurant.address %></p>

</div>
<br>
<div class="container">
  <h3>Reviews</h3>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item"><%= review.content %></li>
    <% end %>
  </ul>
  <br>
  <%= link_to "Review", new_restaurant_review_path(@restaurant), class: "btn btn-light"%>
</div>
